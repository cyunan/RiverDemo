<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RiverSDKDemo_LongBtnStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/btn_function_text_color</item>
        <item name="android:background">@drawable/btn_function_long_bg</item>
        <item name="android:layout_marginBottom">13dp</item>
    </style>

    <style name="RiverSDKDemo_Landscape_BtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/btn_function_text_color</item>
        <item name="android:background">@drawable/btn_function_square_bg</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="RiverSDKDemo_SettingEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/demo_gray_color</item>
        <item name="android:background">@drawable/blue_stroke_rect_bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WelcomeStyle" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/text_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>